{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "outDir": "./lib",
        "lib": [
            "es2019"
        ],
        "module": "commonjs",
        "target": "es2019",
        "types": [
            "node",
            "jest"
        ],
        "alwaysStrict": true,
        "incremental": true,
        "pretty": true,
        "strict": true,
        "removeComments": false,
        "stripInternal": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "./src/**/*.ts"
    ],
    "typedocOptions": {
        "excludeExternals": true,
        "includeVersion": true,
        "name": "Osservaprezzi carburanti node",
        "out": "docs/",
        "readme": "README.md",
    },
}